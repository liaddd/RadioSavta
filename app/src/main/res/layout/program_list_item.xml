<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:cardCornerRadius="5dp"
        app:cardElevation="@dimen/size_4dp"
        app:cardUseCompatPadding="true">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/size_8dp">

        <TextView
                android:id="@+id/program_list_item_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/program_list_item_cover_image_view"
                android:text="name"
                android:textSize="@dimen/text_18sp"
                android:textStyle="bold" />

        <TextView
                android:id="@+id/program_list_item_description_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/program_list_item_name_text_view"
                android:layout_alignParentStart="true"
                android:layout_marginTop="@dimen/size_4dp"
                android:layout_toStartOf="@+id/program_list_item_cover_image_view"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="description" />

        <ImageView
                android:id="@+id/program_list_item_cover_image_view"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentEnd="true"
                android:adjustViewBounds="true"
                android:contentDescription="@null"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_launcher" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>